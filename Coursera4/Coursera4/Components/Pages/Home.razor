@page "/"
@using Coursera4.Models.Coursera4.Models
@rendermode InteractiveServer

<PageTitle>EventEase | Browse Events</PageTitle>


<div class="container-fluid h-100">
    <div class="row">
        <div class="col-12">
            <h1 class="my-3">Upcoming Events</h1>
            <p class="text-muted">Optimized with Virtualization to handle @allEvents.Count events smoothly.</p>
            <hr />
        </div>
    </div>
    <div class="event-list-container w-100"
         style="height: calc(100vh - 160px); overflow-y: auto; border: 1px solid #dee2e6; padding: 0; border-radius: 8px;">

        @if (allEvents == null || !allEvents.Any())
        {
            <div class="p-4">
                <p>Loading events...</p>
            </div>
        }
        else
        {
            <Virtualize Items="@allEvents" Context="ev" ItemSize="320" OverscanCount="5">
                <div class="w-100 p-2">
                    <EventCard Event="@ev" />
                </div>
            </Virtualize>
        }
    </div>
</div>

@code {
    private List<EventModel> allEvents = new();

    protected override void OnInitialized()
    {
        for (int i = 1; i <= 1000; i++)
        {
            allEvents.Add(new EventModel
            {
                EventId = i,
                EventName = $"Corporate Event #{i}",
                Location = i % 2 == 0 ? "Convention Center" : "Innovation Hub",
                EventDate = DateTime.Now.AddDays(i)
            });
        }
    }
}