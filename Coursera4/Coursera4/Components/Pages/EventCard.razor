@using Coursera4.Models
@using Coursera4.Models.Coursera4.Models
@using Microsoft.AspNetCore.Components.Forms

<div class="card mb-3 shadow-sm" style="width: 100%;">
    <div class="card-body">
        @* This check ensures we don't crash if data is missing *@
        @if (Event != null)
        {
            <h5 class="card-title">@Event.EventName</h5>
            <p class="text-muted">@Event.Location</p>
            <p>@Event.EventDate.ToShortDateString()</p>

            <a href="details/@Event.EventId" class="btn btn-primary btn-sm">View Details</a>
        }
    </div>
</div>

@code {
    [Parameter]
    public EventModel Event { get; set; } = new();
}